// SuperCollider REPL test
var global = init GLOBAL
global.tempo(120).beat(4 by 4)
global.audioPath("/Users/yamato/Src/proj_livecoding/orbitscore/test-assets/audio")

var kick = init global.seq
kick.beat(4 by 4).length(1)
kick.audio("kick.wav").chop(1)
kick.play(1, 0, 1, 0)

var snare = init global.seq
snare.beat(4 by 4).length(1)
snare.audio("snare.wav").chop(1)
snare.play(0, 1, 0, 1)

global.run()
kick.loop()
snare.loop()

kick.stop()
snare.stop()
global.stop()