// Live Gain Test - Real-time volume control
// Demonstrates changing gain while sequence is playing

var global = init GLOBAL
global.tempo(120).beat(4 by 4)
global.audioPath("test-assets/audio")

var kick = init global.seq
kick.audio("kick.wav")
kick.play(1, 0, 1, 0)

var snare = init global.seq
snare.audio("snare.wav")
snare.play(0, 1, 0, 1)

var hihat = init global.seq
hihat.audio("hihat.wav")
hihat.play(1, 1, 1, 1)

// Commands for live coding:
// global.run()
// kick.loop()
// snare.loop()
// hihat.loop()

// Now change gain while playing!
// kick.gain(100)   // Kick gets louder
// kick.gain(30)    // Kick gets quieter
// snare.gain(10)   // Snare almost silent
// snare.gain(100)  // Snare gets loud
// hihat.gain(50)   // Hihat medium volume

