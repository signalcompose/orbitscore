{
  "name": "orbitscore",
  "displayName": "OrbitScore",
  "publisher": "local",
  "version": "0.1.0-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/signalcompose/orbitscore"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:orbitscore"
  ],
  "contributes": {
    "commands": [
      {
        "command": "orbitscore.toggleEngine",
        "title": "üöÄ Start Engine",
        "category": "OrbitScore",
        "icon": "$(play)"
      },
      {
        "command": "orbitscore.startEngineDebug",
        "title": "üêõ Start Engine (Debug)",
        "category": "OrbitScore",
        "icon": "$(debug-alt)"
      },
      {
        "command": "orbitscore.runSelection",
        "title": "‚ñ∂Ô∏è Run Selection",
        "category": "OrbitScore",
        "icon": "$(run)"
      },
      {
        "command": "orbitscore.stopEngine",
        "title": "üõë Stop Engine",
        "category": "OrbitScore",
        "icon": "$(stop)"
      },
      {
        "command": "orbitscore.killSuperCollider",
        "title": "üî™ Kill SuperCollider",
        "category": "OrbitScore",
        "icon": "$(close-all)"
      },
      {
        "command": "orbitscore.selectAudioDevice",
        "title": "üîä Select Audio Device",
        "category": "OrbitScore",
        "icon": "$(device-desktop)"
      }
    ],
    "languages": [
      {
        "id": "orbitscore",
        "aliases": [
          "OrbitScore",
          "orbitscore"
        ],
        "extensions": [
          ".osc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "orbitscore",
        "scopeName": "source.orbitscore",
        "path": "./syntaxes/orbitscore-audio.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "orbitscore.runSelection",
        "key": "cmd+enter",
        "when": "editorTextFocus && editorLangId == orbitscore"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/vscode": "1.99.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.9.3"
  }
}
