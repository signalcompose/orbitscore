{
  "name": "orbitscore",
  "displayName": "OrbitScore",
  "publisher": "local",
  "version": "0.1.0-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/signalcompose/orbitscore"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:orbitscore"
  ],
  "contributes": {
    "commands": [
      {
        "command": "orbitscore.toggleEngine",
        "title": "üöÄ Start Engine",
        "category": "OrbitScore",
        "icon": "$(play)"
      },
      {
        "command": "orbitscore.startEngineDebug",
        "title": "üêõ Start Engine (Debug)",
        "category": "OrbitScore",
        "icon": "$(debug-alt)"
      },
      {
        "command": "orbitscore.runSelection",
        "title": "‚ñ∂Ô∏è Run Selection",
        "category": "OrbitScore",
        "icon": "$(run)"
      },
      {
        "command": "orbitscore.stopEngine",
        "title": "üõë Stop Engine",
        "category": "OrbitScore",
        "icon": "$(stop)"
      },
      {
        "command": "orbitscore.killSuperCollider",
        "title": "üî™ Kill SuperCollider",
        "category": "OrbitScore",
        "icon": "$(close-all)"
      },
      {
        "command": "orbitscore.selectAudioDevice",
        "title": "üîä Select Audio Device",
        "category": "OrbitScore",
        "icon": "$(device-desktop)"
      },
      {
        "command": "orbitscore.configureFlash",
        "title": "‚ö° Configure Flash Settings",
        "category": "OrbitScore",
        "icon": "$(settings-gear)"
      }
    ],
    "languages": [
      {
        "id": "orbitscore",
        "aliases": [
          "OrbitScore",
          "orbitscore"
        ],
        "extensions": [
          ".osc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "orbitscore",
        "scopeName": "source.orbitscore",
        "path": "./syntaxes/orbitscore-audio.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "orbitscore.runSelection",
        "key": "cmd+enter",
        "when": "editorTextFocus && editorLangId == orbitscore"
      }
    ],
    "configuration": {
      "title": "OrbitScore",
      "properties": {
        "orbitscore.flashCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of times to flash executed lines",
          "format": "integer"
        },
        "orbitscore.flashDuration": {
          "type": "number",
          "default": 150,
          "minimum": 50,
          "maximum": 500,
          "description": "Duration of each flash in milliseconds",
          "format": "integer"
        },
        "orbitscore.flashColor": {
          "type": "string",
          "enum": [
            "selection",
            "error",
            "warning",
            "info",
            "custom"
          ],
          "enumDescriptions": [
            "Use editor selection color",
            "Use error color (red)",
            "Use warning color (yellow)",
            "Use info color (blue)",
            "Use custom color"
          ],
          "default": "selection",
          "description": "Color theme for line flash"
        },
        "orbitscore.flashCustomColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Custom flash color (hex format, e.g., #ff6b6b)",
          "format": "color-hex"
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:engine && tsc -p tsconfig.json",
    "build:engine": "cd ../engine && npm run build && cp -r dist ../vscode-extension/engine/ && cp -r supercollider ../vscode-extension/engine/",
    "dev": "tsc -w"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/vscode": "1.99.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.9.3"
  }
}
