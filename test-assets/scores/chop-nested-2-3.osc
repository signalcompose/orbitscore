// Nested 2 and 3 subdivisions in 4 parts

var global = init GLOBAL
global.tempo(60)  // 60BPM（1小節=4秒）
global.beat(4 by 4)

var test = init global.seq
test.beat(4 by 4).length(4)  // 4回ループ
test.audio("../../test-assets/audio/arpeggio_c.wav").chop(4)
// Pattern: 1, (2, 3), 2, (3, 4, 1)
// 4分割なので各スロットは1000ms
// - 0ms: slice 1
// - 1000-2000ms: (2,3) 2連符
// - 2000ms: slice 2  
// - 3000-4000ms: (3,4,1) 3連符
test.play(1, (2, 3), 2, (3, 4, 1))

// Start
global.run()