// Debug nested timing

var global = init GLOBAL
global.tempo(60)  // 60BPM（1小節=4秒）
global.beat(4 by 4)

var test = init global.seq
test.beat(4 by 4).length(1)
test.audio("../../test-assets/audio/arpeggio_c.wav").chop(4)
// Nested: 1, (2, 3), 4
// Should be:
// - 0ms: slice 1 (takes 1/3 of 4000ms = 1333ms)
// - 1333-2667ms: (2,3) split in half = 1333ms, 2000ms
// - 2667ms: slice 4 (takes 1/3 of 4000ms = 1333ms)
test.play(1, (2, 3), 4)

// Start
global.run()