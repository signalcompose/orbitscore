// Test chop() with arpeggio
// Divide arpeggio into 4 slices and play in order

var global = init GLOBAL
global.tempo(120)
global.beat(4 by 4)

var arp = init global.seq
arp.beat(4 by 4).length(1)
arp.audio("../../test-assets/audio/arpeggio_c.wav").chop(4)
arp.play(1, 2, 3, 4)

// Start
global.run()
